
<h1 class="main-title">Hoy dia...</h1>

<div class="add-entrie"><%= link_to '+ Nueva Historia', new_timeline_path(@timeline) %></div>

<% @timelines.each do |timeline| %>

<div class="entrie">
  <div class="entrie-head">
    <div class="time">Creado el <%= timeline.created_at.in_time_zone('Lima').strftime("%d-%m-%Y a las %H:%M")%> por <%= timeline.user.name %></div>
    <div class="title"><%= timeline.title %></div>
  </div>
  <div class="entrie-content"><%= simple_format(timeline.content, class: 'entrie-content') %></div>
</div>

<div class="comment-container">
  <div class="comment-input">
    <%= render 'comments/form_comment', comment: Comment.new(timeline: timeline) %>
  </div>
  <% timeline.comments.each do |comment| %>
  <div class="comment-entrie">
    <div class="comment-head"><%= comment.user.name %> <span> - <%= comment.created_at.in_time_zone('Lima').strftime("%d-%m-%Y a las %H:%M")%> - </span><%= link_to 'Borrar', timeline_comment_path(timeline, comment), method: :delete %></div>
    <div class="comment-content"><%= comment.comment_content %></div>
  </div>
  <% end %>
</div>


<% end %>


<br>
